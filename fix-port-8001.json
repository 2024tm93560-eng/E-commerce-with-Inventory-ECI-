{
  "spec": {
    "template": {
      "spec": {
        "containers": [{
          "name": "api",
          "args": ["app.py","--host","0.0.0.0","--port","8001"],
          "ports": [{"containerPort": 8001}],
          "readinessProbe": {
            "tcpSocket": {"port": 8001},
            "initialDelaySeconds": 5,
            "periodSeconds": 5,
            "failureThreshold": 3
          },
          "livenessProbe": {
            "tcpSocket": {"port": 8001},
            "initialDelaySeconds": 20,
            "periodSeconds": 10,
            "failureThreshold": 3
          },
          "startupProbe": {
            "tcpSocket": {"port": 8001},
            "periodSeconds": 2,
            "failureThreshold": 30
          }
        }]
      }
    }
  }
}
